{% extends 'base.html.twig' %}

{% block title %}Welcome, {{ user.name }}{% endblock %}

{% block body %}
    <h1>{{ user.name }}</h1>
    <table>
        <tr>
            <th>Username</th>
            <td>{{ user.name }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Role</th>
            <td>{{ user.phone }}</td>
        </tr>
{% endblock %}